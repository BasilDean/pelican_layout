.siteHeader
  &__wrapper
    wrapper()
  &__line
    display: flex;
    align-items: center
    justify-content: space-between
    padding-top: 3.2rem
    padding-bottom: 2rem
    &:first-child
      border-bottom: .2rem solid golden
  &__logo
    margin: 0 auto
    svg
      fill: golden
      width 13.1rem
      height auto
      aspect-ratio 2 / 1
  &__search
    border: .1rem solid golden
    border-radius 1rem
    form
      display: flex;
    input
      border: none
      background-color: transparent
      color: white
      font-size: 1.4rem
      padding: 1rem 1.4rem
    button
      border: none
      background-color: transparent
      padding: 1rem 1.4rem
      svg
        fill golden
        width: 2.6rem
        aspect-ratio: 1
  &__icons
    display: flex;
  &__icon
    margin-left: 1.5rem
    svg
      fill: golden
      width: 2.8rem
      aspect-ratio 1
  &__nav
    width: 100%
    ul
      display: flex
      justify-content: space-around
      align-items: center
      width: 100%
      li
        a
          font-size: 1.8rem
          color: white
          text-decoration: none
          text-transform: uppercase

html
  background-image: background-color
  background-repeat: no-repeat
  background-size: cover
  min-height: 100vh
  font-size: calc(10 * 100vw / 1440);

.headerPhone
  display: flex
  align-items: flex-end
  &__pic
    width: 4.9rem
    aspect-ratio: 1
    margin-right: .5rem
    svg
      width: 100%
      height: 100%
      fill: golden
  &__number
    font-size: 2.2rem
    line-height: 165%
    color: white
  &__callback
    color: golden
    text-decoration: underline
    font-size: 1.4rem
